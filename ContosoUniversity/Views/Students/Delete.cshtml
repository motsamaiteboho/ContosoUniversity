@model Student

@{ ViewData["Title"] = "Delete"; }

<h2>Delete Student</h2>

<div>
    <h4>Are you sure you want to delete this student? </h4>
    <hr />
    <partial name="_StudentDetails" model="@Model" />
    
    <form method="post" asp-action="Delete"> 
        <input type="hidden" asp-for="StudentID"/>
        <input type="submit" value="Detele" class="btn btn-primary"/>
        <a asp-controller="Students" asp-action="Index">Back to List </a>
    </form>
</div>

<div>
    <a asp-controller="Students" asp-action="Edit" asp-route-id="@Model.StudentID">Edit</a> |
    <a asp-controller="Students" asp-action="Index">Back to List</a>
</div>